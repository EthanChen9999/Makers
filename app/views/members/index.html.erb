<div class="row">
  <div class="col-md-3">
    <% if current_user.photo %>
      <%= link_to(image_tag(@photo.image_url(:medium), class: 'centered'), controller: "registrations", action: "edit") %>
      <h3><%= current_user.username %></h3>
    <% else %>
      <%= link_to(image_tag('default.jpg', class: 'centered'), controller: "registrations", action: "edit") %>
      <h3><%= current_user.username %></h3>
    <% end %>
  </div>

  <div class="col-md-8">
    <ul class="nav nav-tabs" role="tablist">
      <li role="presentation" class="active"><%= link_to '个人简历', "#profile", remote: 'true', 'role': 'tab', 'data-toggle': 'tab', 'data-link': '/members/display', 'class': 'trigger' %></li>
      <li role="presentation"><%= link_to '已上传图纸', "#product", 'role': 'tab', 'data-toggle': 'tab', 'data-link': '/products/index', 'class': 'trigger' %></li>
      <li role="presentation"><%= link_to '新增图纸', "#upload", 'role': 'tab', 'data-toggle': 'tab', 'data-link': '/products/new', 'class': 'trigger' %></li>
    </ul>
    <div id="target">
      <%= render "about" %>
    </div>
  </div>
</div>
