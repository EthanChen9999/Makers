<h2><%= t("devise.unlocks.resend_unlock_mail") %></h2>

<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, class: "roll" }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label t("admin.email_address") %>
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit t("devise.unlocks.resend_unlock_mail") %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
