<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="page-header">
      <h2 class="text-center"><%= t("devise.registrations.sign_up") %></h2>
    </div>
  </div>
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "role") do |f| %>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%= f.label t("admin.email_address").to_sym %>
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label t("admin.pw").to_sym %>
      <% if @minimum_password_length %>
      <em>
        (
        <%= t("admin.min_request") %>
        <%= @minimum_password_length %>
        <%= t("admin.characters") %>
        )
      </em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label t("devise.registrations.pw_again").to_sym %>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>
    <%= f.submit t("devise.registrations.sign_up"), class: "btn btn-default centered" %>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
