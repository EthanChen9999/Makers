<h2><%= t("admin.update_profile") %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "role" }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label t("admin.email_address").to_sym %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

    <div class="form-group">
      <%= f.label t("admin.username").to_sym %>
      <%= f.text_field :username, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.fields_for :photo do |photo| %>
      <%= photo.file_field :image %>
      <% end %>

  <div class="form-group">
    <%= f.label t("admin.new_pw").to_sym %> <i>(<%= t("devise.registrations.no_need_change") %>)</i><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= t("admin.min_request") %><%= @minimum_password_length %><%= t("admin.characters") %></em>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label t("admin.new_pw_again").to_sym %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label t("admin.pw").to_sym %> <i>(<%= t("devise.registrations.need_input_pw") %>)</i><br />
    <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
  </div>

    <%= f.submit t("action.confirm"), class: "btn btn-default" %>

<% end %>

<%= link_to "返回", :back %>
