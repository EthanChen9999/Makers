<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="page-header">
      <h2 class="centered">修改密碼</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "role text-center" }) do |f| %>
    </div>
    <div class="form-group">
      <%= f.label t("admin.new_pw").to_sym %>
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      <% if @minimum_password_length %>
      <em><%= t("admin.min_request") %><%= @minimum_password_length %><%= t("admin.characters") %></em>
      <% end %>
    </div>
    <div class="form-group">
      <%= f.label t("admin.new_pw_again").to_sym %>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>
    <%= f.submit t("action.confirm"), class: "btn btn-default" %><br />
    <%= render "common/link_back" %>
    <% end %>
  </div>
</div>
