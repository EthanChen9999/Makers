<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "role" }) do |f| %>
<div class="form-group">
  <%= f.label t("admin.new_pw").to_sym %>
  <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
  <% if @minimum_password_length %>
  <em><%= t("admin.min_request") %><%= @minimum_password_length %><%= t("admin.characters") %></em>
  <% end %>
</div>
<div class="form-group">
  <%= f.label t("admin.new_pw_again").to_sym %>
  <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
</div>
<br>
<%= f.submit t("action.confirm"), class: "btn btn-default btn-block" %><br />
<% end %>
</div>
