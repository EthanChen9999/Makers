<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html:{ roll: "form"}) do |f| %>
  <%= devise_error_messages! %>
  <div class="form-group">
    <%= f.label :名称 %><br />
    <%= f.text_field :username, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :电子信箱 %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :密码 %>
    <% if @minimum_password_length %>
      <em>(最少需要<%= @minimum_password_length %> 字元)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :请再次输入密码 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
  </div>
  <div class="form-group">
    <div class="col-md-7" style="padding-left:0;">
      <%= rucaptcha_input_tag(class: 'form-control', placeholder: '请输入验证码') %>
    </div>
    <%= rucaptcha_image_tag(alt: 'Captcha', class: 'col-md-5 control-label') %>
  </div>
  <div class="form-group" style="height:35px;">
  </div>
  <%= f.submit "注册", class: "btn btn-default btn-block" %>
<% end %>


<%= render "devise/shared/links" %>
