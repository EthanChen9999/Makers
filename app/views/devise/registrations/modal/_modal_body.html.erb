<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html:{ roll: "form"}) do |f| %>
  <%= devise_error_messages! %>
  <div class="form-group">
    <%= f.label t("admin.username") %><br />
    <%= f.text_field :username, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label t("admin.email_address") %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label t("admin.pw") %>
    <% if @minimum_password_length %>
      <em>(<%= t("admin.min_request") %><%= @minimum_password_length %><%= t("admin.characters") %>)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label t("devise.registrations.pw_again").to_sym %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
  </div>
  <div class="form-group">
    <div class="col-md-7" style="padding-left:0;">
      <%= rucaptcha_input_tag(class: 'form-control', placeholder: t("verification.input_code")) %>
    </div>
    <%= rucaptcha_image_tag(alt: 'Captcha', class: 'col-md-5 control-label') %>
  </div>
  <div class="form-group" style="height:35px;">
  </div>
  <%= f.submit t("devise.registrations.sign_up"), class: "btn btn-default btn-block" %>
<% end %>


<%= render "devise/shared/links" %>
