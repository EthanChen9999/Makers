<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="page-header">
      <h2 class="text-center"><%= t("devise.passwords.reset_pw") %></h2>
    </div>
  </div>
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "role" }) do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group">
        <%= f.label t("admin.email_address").to_sym %>
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>
      <%= f.submit t("action.confirm"), class: "btn btn-default centered" %>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
