<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="page-header">
      <h2 class="text-center">重寄确认信</h2>
    </div>
  </div>
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: "role" }) do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group">
        <%= f.label :电子信箱 %><br />
        <%= f.email_field :email, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: "form-control" %>
      </div>
      <%= f.submit "确认发送", class: "btn btn-default centered" %>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
