<div class="row">
  <div class="col-md-10 col-md-offset-1">

    <h2>更新圖紙內容<small> -<%= @product.title %></small></h2>
    <%= form_for @product, html: {'roll': 'form'} do |product| %>
    <div class="form-group">
      <%= product.label :图纸名称 %>
      <%= product.text_field:title, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= product.label :图纸描述 %><br />
      <%= product.text_area :description, class: 'form-control' %><br />
    </div>

    <div class="form-group">
      <div class="row">
        <% @product.product_images.each do |each_image| %>
        <div class="col-sm-6 col-md-3">
          <div class="thumbnail">
            <%= image_tag(each_image.image_url(:medium).to_s) %>
            <div class="caption">
              <%= product.fields_for :product_images, each_image do |image| %>
              <h5><%= image.label :更新图片 %><br /><small>仅支持jpg/jpeg/png文件格式</small></h5>
              <%= image.file_field :image, accept: 'image/jpeg,image/jpg,image/png' %><br />
              <% end %>
              <%= link_to('删除图片', destroy_image_path(each_image), method: :delete, data: {confirm: "您确定删除吗？"}) %>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-10">
        <%= product.submit '确认变更', class: 'btn btn-default' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
