<% @products.each do |product| %>
  <div class="col-sm-6 col-md-3" style="margin-top:3%;">
    <div class="thumbnail">
      <%= link_to((image_tag product.product_image.images[0].url(:large)), product_path(product)) %>
      <div class="caption">
        <h4><%= product.title %></h4>
        <span class="glyphicon glyphicon-heart"></span><br />
        <%= link_to(t("products.change_desc"), edit_product_path(product)) %>
        <%= link_to(t("products.destroy_model"), product_path(product), method: :delete) %>
      </div>
    </div>
  </div>
<% end %>
</div>
